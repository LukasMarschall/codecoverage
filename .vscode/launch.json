    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Aktuelle Datei",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\codecoverage\\manage.py",
            "args": [
                "runserver",
                "--noreload"
            ],
            "django": true
        },
        {
            "name": "Python: Django SSL",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\codecoverage\\manage.py",
            "args": [
                "runsslserver",
                "--cert",
                "C:\\Users\\marsl\\Source\\localcert.crt",
                "--key",
                "C:\\Users\\marsl\\Source\\localkey.key",
                "--noreload"
            ],
            "django": true
        }
    ]
}